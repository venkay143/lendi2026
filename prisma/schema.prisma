generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  CUSTOMER
  ARTISAN
  ADMIN
}

model User {
  id             Int             @id @default(autoincrement())
  name           String
  email          String          @unique
  password       String
  role           Role            @default(CUSTOMER)
  isVerified     Boolean         @default(false)
  createdAt      DateTime        @default(now())
  updatedAt      DateTime        @updatedAt

  artisanProfile ArtisanProfile?
  products       Product[]
  orders         Order[]
  reviews        Review[]
  cart           Cart?
}

model ArtisanProfile {
  id              Int      @id @default(autoincrement())
  user            User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId          Int      @unique
  bio             String
  story           String
  location        String
  phone           String
  aadhaarNumber   String?
  profileImageUrl String?
  isApproved      Boolean  @default(false)
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  products        Product[]
}

model Category {
  id       Int       @id @default(autoincrement())
  name     String    @unique
  slug     String    @unique
  products Product[]
}

model Product {
  id                    Int              @id @default(autoincrement())
  title                 String
  description           String
  price                 Decimal          @db.Decimal(10, 2)
  stock                 Int              @default(0)
  images                String[]
  materials             String[]
  productionTime        String
  productionDate        DateTime
  artisanStory          String
  handmadeProofImageUrl String?
  locationLat           Float?
  locationLng           Float?
  locationTag           String?

  artisan          User            @relation(fields: [artisanId], references: [id], onDelete: Cascade)
  artisanId        Int
  artisanProfile   ArtisanProfile? @relation(fields: [artisanProfileId], references: [id], onDelete: SetNull)
  artisanProfileId Int?

  category   Category?  @relation(fields: [categoryId], references: [id], onDelete: SetNull)
  categoryId Int?

  createdAt  DateTime   @default(now())
  updatedAt  DateTime   @updatedAt

  orderItems OrderItem[]
  reviews    Review[]
}

model Cart {
  id        Int        @id @default(autoincrement())
  user      User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId    Int        @unique
  items     CartItem[]
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
}

model CartItem {
  id        Int      @id @default(autoincrement())
  cart      Cart     @relation(fields: [cartId], references: [id], onDelete: Cascade)
  cartId    Int
  product   Product  @relation(fields: [productId], references: [id])
  productId Int
  quantity  Int      @default(1)
  unitPrice Decimal  @db.Decimal(10, 2)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Order {
  id              Int         @id @default(autoincrement())
  user            User        @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId          Int
  totalAmount     Decimal     @db.Decimal(10, 2)
  status          String      @default("PENDING")
  shippingAddress String
  createdAt       DateTime    @default(now())
  updatedAt       DateTime    @updatedAt

  items           OrderItem[]
}

model OrderItem {
  id        Int      @id @default(autoincrement())
  order     Order    @relation(fields: [orderId], references: [id], onDelete: Cascade)
  orderId   Int
  product   Product  @relation(fields: [productId], references: [id])
  productId Int
  quantity  Int
  unitPrice Decimal  @db.Decimal(10, 2)
  subtotal  Decimal  @db.Decimal(10, 2)
}

model Review {
  id        Int      @id @default(autoincrement())
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId    Int
  product   Product  @relation(fields: [productId], references: [id], onDelete: Cascade)
  productId Int
  rating    Int
  comment   String?
  createdAt DateTime @default(now())

  @@unique([userId, productId])
}
